{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            // package is referred by its directory name i.e., _ instead of - to allow for local script execution & debugging
            // for all other intents and purposes refer to it as ubuntu-package-downloader
            "module": "ubuntu_package_downloader",
            "args": "${command:pickArgs}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}